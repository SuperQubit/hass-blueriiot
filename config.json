{
  "name": "Blueriiot Blue Connect",
  "version": "2023.11.1",
  "slug": "hass-blueriiot",
  "description": "An add-on for Blueriiot Blue Connect pool sensors.",
  "url": "https://github.com/SuperQubit/hass-blueriiot",
  "startup": "application",
  "boot": "auto",
  "build": {
      "context": ".",
      "dockerfile": "Dockerfile"
  },  
  "arch": [
    "amd64",
    "aarch64",
    "armv7"
  ],
  "options": {
    "BlueriiotUser": "",
    "BlueriiotPassword": "",
    "MQTTUser": "",
    "MQTTPassword": "",
    "MQTTBroker": "core-mosquitto",
    "MQTTTLS": false,
    "PoolIndex": 0
  },
  "schema": {
    "BlueriiotUser": "str",
    "BlueriiotPassword": "str",
    "MQTTUser": "str?",
    "MQTTPassword": "str?",
    "MQTTBroker": "str",
    "MQTTTLS": "bool?",
    "PoolIndex": "int?"
  }
}
